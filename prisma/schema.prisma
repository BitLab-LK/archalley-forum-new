generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              users   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Comment {
  id            String    @id
  content       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime
  postId        String
  authorId      String
  parentId      String?
  users         users     @relation(fields: [authorId], references: [id])
  Comment       Comment?  @relation("CommentToComment", fields: [parentId], references: [id])
  other_Comment Comment[] @relation("CommentToComment")
  Post          Post      @relation(fields: [postId], references: [id])
}

model Post {
  id                String     @id
  createdAt         DateTime   @default(now())
  updatedAt         DateTime
  title             String?
  content           String
  isAnonymous       Boolean    @default(false)
  isPinned          Boolean    @default(false)
  isLocked          Boolean    @default(false)
  aiCategory        String?
  aiTags            String[]
  originalLanguage  String     @default("English")
  translatedContent String?
  viewCount         Int        @default(0)
  shareCount        Int        @default(0)
  authorId          String
  categoryId        String
  Comment           Comment[]
  users             users      @relation(fields: [authorId], references: [id])
  categories        categories @relation(fields: [categoryId], references: [id])
  attachments       attachments[]

  @@index([authorId])
  @@index([categoryId])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model attachments {
  id        String   @id
  filename  String
  url       String
  size      Int
  mimeType  String
  postId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
}

model categories {
  id          String   @id
  name        String   @unique
  description String
  color       String
  icon        String
  slug        String   @unique
  postCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  Post        Post[]
}

model flags {
  id        String     @id
  reason    String
  status    FlagStatus @default(PENDING)
  userId    String
  postId    String?
  commentId String?
  createdAt DateTime   @default(now())
  updatedAt DateTime
  users     users      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model notifications {
  id        String           @id
  type      NotificationType
  title     String
  message   String
  isRead    Boolean          @default(false)
  data      Json?
  userId    String
  createdAt DateTime         @default(now())
  users     users            @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model pages {
  id          String   @id
  title       String
  slug        String   @unique
  content     String
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  authorId    String
  users       users    @relation(fields: [authorId], references: [id])
}

model settings {
  id          String   @id
  key         String   @unique
  value       String
  updatedAt   DateTime
  description String?
  updatedById String
  users       users    @relation(fields: [updatedById], references: [id])
}

model users {
  id                String          @id
  firstName         String?
  lastName          String?
  name              String?         // Keep for backward compatibility
  email             String          @unique
  emailVerified     DateTime?
  image             String?
  password          String?
  phoneNumber       String?
  headline          String?
  skills            String[]        @default([])
  industry          String?
  country           String?
  city              String?
  company           String?
  profession        String?
  bio               String?
  location          String?         // Keep for backward compatibility
  website           String?
  portfolioUrl      String?
  phone             String?
  profileVisibility Boolean         @default(true)
  linkedinUrl       String?
  twitterUrl        String?
  instagramUrl      String?
  facebookUrl       String?
  role              UserRole        @default(MEMBER)
  rank              UserRank        @default(NEW_MEMBER)
  isVerified        Boolean         @default(false)
  isSuspended       Boolean         @default(false)
  suspendedUntil    DateTime?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime
  lastActiveAt      DateTime        @default(now())
  Account           Account[]
  Comment           Comment[]
  Post              Post[]
  Session           Session[]
  flags             flags[]
  notifications     notifications[]
  pages             pages[]
  settings          settings[]
  votes             votes[]
  workExperience    WorkExperience[]
  education         Education[]
}

model WorkExperience {
  id          String    @id
  jobTitle    String
  company     String
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean   @default(false)
  description String?
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  user        users     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Education {
  id          String    @id
  degree      String
  institution String
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean   @default(false)
  description String?
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  user        users     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model votes {
  id        String   @id
  type      VoteType
  userId    String
  postId    String?
  commentId String?
  createdAt DateTime @default(now())
  users     users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@unique([userId, postId])
}

enum FlagStatus {
  PENDING
  REVIEWED
  RESOLVED
  DISMISSED
}

enum NotificationType {
  POST_LIKE
  POST_COMMENT
  COMMENT_REPLY
  MENTION
  BEST_ANSWER
  SYSTEM
}

enum UserRank {
  NEW_MEMBER
  CONVERSATION_STARTER
  RISING_STAR
  VISUAL_STORYTELLER
  VALUED_RESPONDER
  COMMUNITY_EXPERT
  TOP_CONTRIBUTOR
}

enum UserRole {
  ADMIN
  MODERATOR
  MEMBER
}

enum VoteType {
  UP
  DOWN
}
