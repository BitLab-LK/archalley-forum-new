// ============================================
// COMPETITION SUBMISSION SYSTEM
// Separate tables - no modifications to existing registration tables
// ============================================

model CompetitionSubmission {
  id                    String   @id @default(cuid())
  
  // References to existing data (READ-ONLY, no Prisma relations to avoid constraints)
  registrationId        String   // Links to CompetitionRegistration.id
  registrationNumber    String   @unique // Public identifier (e.g., "QZ8T4L") - Used in URLs and voting
  userId                String   // Links to users.id
  competitionId         String   // Links to Competition.id
  
  // Category Selection - Required
  submissionCategory    SubmissionCategory // DIGITAL or PHYSICAL
  
  // Submission Details
  title                 String
  description           String   @db.Text // 50-200 words (excluded for kids' tree category)
  
  // File Storage - Vercel Blob URLs
  keyPhotographUrl      String   // Main image for voting (JPG)
  additionalPhotographs String[] // 2-4 additional images (array of JPG URLs)
  documentFileUrl       String?  // Optional PDF < 5MB (sketches, materials, process)
  videoFileUrl          String?  // Optional MP4 < 10MB
  
  // File Metadata for tracking
  fileMetadata          Json?    
  // Structure: { keyPhoto: {filename, size, uploadedAt}, photos: [...], document: {...}, video: {...} }
  
  // Status Management
  status                CompetitionSubmissionStatus @default(DRAFT)
  submittedAt           DateTime?
  
  // Validation & Review
  isValidated           Boolean  @default(false)
  validationErrors      Json?    // Array of validation issues
  validatedBy           String?  // Admin/Moderator user ID
  validatedAt           DateTime?
  validationNotes       String?  @db.Text
  
  // Public Display
  isPublished           Boolean  @default(false)
  publishedAt           DateTime?
  
  // Timestamps
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  juryScores            JuryScore[]          @relation("JuryScores")
  // Relations (new tables only)
  votes                 SubmissionVote[]
  votingStats           SubmissionVotingStats?
  
  @@index([registrationId])
  @@index([registrationNumber])
  @@index([userId])
  @@index([competitionId])
  @@index([submissionCategory])
  @@index([status])
  @@index([isPublished])
  @@index([competitionId, submissionCategory])
  @@unique([registrationId]) // One submission per registration
}

enum SubmissionCategory {
  DIGITAL
  PHYSICAL
}

enum CompetitionSubmissionStatus {
  DRAFT              // User is still editing
  SUBMITTED          // User submitted, awaiting validation
  VALIDATED          // Admin approved
  PUBLISHED          // Live for public voting
  REJECTED           // Admin rejected
  WITHDRAWN          // User withdrew
}

// Unified Voting System (Public Votes + Jury Scores)
model SubmissionVote {
  id                 String   @id @default(cuid())
  registrationNumber String
  userId             String
  
  // Vote Type
  voteType           SubmissionVoteType @default(PUBLIC) // PUBLIC or JURY
  
  // Jury Scoring (only for JURY votes)
  score              Float?   // Jury score (e.g., 1-10)
  comments           String?  @db.Text
  scoringCriteria    Json?    // Detailed breakdown {creativity: 8, technical: 9, etc.}
  
  // Timestamps
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt @default(now())
  
  // Relations
  submission         CompetitionSubmission @relation(fields: [registrationNumber], references: [registrationNumber], onDelete: Cascade)
  user               users    @relation("SubmissionVotes", fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([registrationNumber, userId]) // One vote per user per entry (public OR jury)
  @@index([registrationNumber])
  @@index([userId])
  @@index([voteType])
  @@index([registrationNumber, voteType])
  @@index([createdAt])
}

// Voting Statistics (Cached Aggregates)
model SubmissionVotingStats {
  id                 String   @id @default(cuid())
  registrationNumber String   @unique
  
  // Public Voting Metrics
  publicVoteCount    Int      @default(0)
  
  // Jury Scoring Metrics
  juryVoteCount      Int      @default(0)
  juryScoreTotal     Float    @default(0)
  juryScoreAverage   Float?   // Calculated average
  
  // Engagement Metrics
  viewCount          Int      @default(0)
  shareCount         Int      @default(0)
  
  // Rankings (Computed Periodically)
  publicRank         Int?     // Based on public votes
  juryRank           Int?     // Based on jury average score
  overallRank        Int?     // Combined ranking
  categoryRank       Int?     // Rank within category
  
  // Awards
  award              String?  // "FIRST_PRIZE", "SECOND_PRIZE", etc.
  certificateUrl     String?
  
  // Tracking
  firstVoteAt        DateTime?
  lastVotedAt        DateTime?
  
  // Timestamps
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  
  // Relations
  submission         CompetitionSubmission @relation(fields: [registrationNumber], references: [registrationNumber], onDelete: Cascade)
  
  @@index([publicVoteCount])
  @@index([juryScoreAverage])
  @@index([overallRank])
  @@index([registrationNumber, publicVoteCount])
}

enum SubmissionVoteType {
  PUBLIC  // Regular user vote
  JURY    // Judge/Jury score
}

