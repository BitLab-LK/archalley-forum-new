generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              users   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Comment {
  id            String    @id @default(cuid())
  content       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  postId        String
  authorId      String
  parentId      String?
  users         users     @relation(fields: [authorId], references: [id])
  Comment       Comment?  @relation("CommentToComment", fields: [parentId], references: [id])
  other_Comment Comment[] @relation("CommentToComment")
  Post          Post      @relation(fields: [postId], references: [id])
}

model Post {
  id                String         @id @default(cuid())
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  title             String?
  content           String
  isAnonymous       Boolean        @default(false)
  isPinned          Boolean        @default(false)
  isLocked          Boolean        @default(false)
  aiCategory        String?
  aiTags            String[]
  originalLanguage  String         @default("English")
  translatedContent String?
  viewCount         Int            @default(0)
  shareCount        Int            @default(0)
  authorId          String
  categoryId        String         // Primary category
  categoryIds       String[]       // Multiple categories (including primary)
  aiCategories      String[]       // AI-suggested category names
  Comment           Comment[]
  users             users          @relation(fields: [authorId], references: [id])
  categories        categories     @relation(fields: [categoryId], references: [id])
  attachments       attachments[]

  @@index([authorId])
  @@index([categoryId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  id         String   @id @default(cuid())

  @@unique([identifier, token])
}

model attachments {
  id        String   @id @default(cuid())
  filename  String
  url       String
  size      Int
  mimeType  String
  postId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
}

model categories {
  id          String @id
  name        String @unique
  description String
  color       String
  icon        String
  slug        String @unique
  postCount   Int    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Post        Post[]
}

model flags {
  id        String     @id
  reason    String
  status    FlagStatus @default(PENDING)
  userId    String
  postId    String?
  commentId String?
  createdAt DateTime   @default(now())
  updatedAt DateTime
  users     users      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model notifications {
  id        String           @id
  type      NotificationType
  title     String
  message   String
  isRead    Boolean          @default(false)
  data      Json?
  userId    String
  createdAt DateTime         @default(now())
  users     users            @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailLogs {
  id        String           @id @default(cuid())
  email     String
  subject   String
  template  String
  type      NotificationType
  status    EmailStatus      @default(PENDING)
  sentAt    DateTime?
  error     String?
  userId    String?
  postId    String?
  commentId String?
  metadata  Json?
  createdAt DateTime         @default(now())

  @@index([email])
  @@index([userId])
  @@index([type])
  @@index([status])
}

model pages {
  id          String   @id
  title       String
  slug        String   @unique
  content     String
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  authorId    String
  users       users    @relation(fields: [authorId], references: [id])
}

model settings {
  id          String   @id
  key         String   @unique
  value       String
  updatedAt   DateTime
  description String?
  updatedById String
  users       users    @relation(fields: [updatedById], references: [id])
}

model users {
  id                  String           @id
  name                String?
  email               String           @unique
  emailVerified       DateTime?
  image               String?
  password            String?
  company             String?
  profession          String?
  bio                 String?
  location            String?
  website             String?
  phone               String?
  profileVisibility   Boolean          @default(true)
  linkedinUrl         String?
  twitterUrl          String?
  instagramUrl        String?
  role                UserRole         @default(MEMBER)
  isVerified          Boolean          @default(false)
  isSuspended         Boolean          @default(false)
  suspendedUntil      DateTime?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime
  lastActiveAt        DateTime         @default(now())
  city                String?
  country             String?
  facebookUrl         String?
  firstName           String?
  headline            String?
  industry            String?
  lastName            String?
  phoneNumber         String?
  portfolioUrl        String?
  skills              String[]         @default([])
  behanceUrl          String?
  dribbbleUrl         String?
  emailPrivacy        PrivacyLevel     @default(MEMBERS_ONLY)
  githubUrl           String?
  otherSocialUrl      String?
  phonePrivacy        PrivacyLevel     @default(ONLY_ME)
  profilePhotoPrivacy PrivacyLevel     @default(EVERYONE)
  tiktokUrl           String?
  youtubeUrl          String?
  professions         String[]         @default([])
  emailDigest         EmailDigestFreq  @default(DISABLED)
  emailNotifications  Boolean          @default(true)
  notifyOnComment     Boolean          @default(true)
  notifyOnLike        Boolean          @default(true)
  notifyOnMention     Boolean          @default(true)
  notifyOnNewPost     Boolean          @default(false)
  notifyOnReply       Boolean          @default(true)
  notifyOnSystem      Boolean          @default(true)
  twoFactorEnabled    Boolean          @default(false)
  twoFactorSecret     String?
  Account             Account[]
  Comment             Comment[]
  education           Education[]
  Post                Post[]
  Session             Session[]
  workExperience      WorkExperience[]
  flags               flags[]
  notifications       notifications[]
  pages               pages[]
  settings            settings[]
  userBadges          userBadges[]
  votes               votes[]
}

model WorkExperience {
  id          String    @id @default(cuid())
  jobTitle    String
  company     String
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean   @default(false)
  description String?
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        users     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Education {
  id          String    @id @default(cuid())
  degree      String
  institution String
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean   @default(false)
  description String?
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        users     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model badges {
  id          String       @id @default(cuid())
  name        String       @unique
  description String
  icon        String
  color       String
  type        BadgeType
  level       BadgeLevel   @default(BRONZE)
  criteria    Json
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  userBadges  userBadges[]

  @@index([type])
  @@index([isActive])
}

model userBadges {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  earnedAt  DateTime @default(now())
  awardedBy String?
  badges    badges   @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  users     users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([badgeId])
}

model votes {
  id        String   @id @default(cuid())
  type      VoteType
  userId    String
  postId    String?
  commentId String?
  createdAt DateTime @default(now())
  users     users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@unique([userId, postId])
}

enum EmailStatus {
  PENDING
  SENT
  FAILED
  BOUNCED
}

enum FlagStatus {
  PENDING
  REVIEWED
  RESOLVED
  DISMISSED
}

enum NotificationType {
  POST_LIKE
  POST_COMMENT
  COMMENT_REPLY
  MENTION
  BEST_ANSWER
  SYSTEM
  EMAIL_VERIFICATION
  NEW_POST_IN_CATEGORY
  NEW_FOLLOWER
}

enum BadgeType {
  ACTIVITY
  APPRECIATION
  ENGAGEMENT
  TENURE
  ACHIEVEMENT
  CONTENT_TYPE
  QUALITY
}

enum BadgeLevel {
  BRONZE
  SILVER
  GOLD
  PLATINUM
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  MODERATOR
  MEMBER
}

enum VoteType {
  UP
  DOWN
}

enum EmailDigestFreq {
  DISABLED
  DAILY
  WEEKLY
  MONTHLY
}

enum PrivacyLevel {
  EVERYONE
  MEMBERS_ONLY
  ONLY_ME
}
