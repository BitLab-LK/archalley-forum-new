# Database (Azure PostgreSQL Flexible Server)
DATABASE_URL="postgresql://postgres:{password}@ai-builder-db-server.postgres.database.azure.com:5432/archalley?sslmode=require"
PRISMA_CLIENT_ENGINE_TYPE=library

# Azure PostgreSQL Connection Details
PGHOST=ai-builder-db-server.postgres.database.azure.com
PGUSER=postgres
PGPORT=5432
PGDATABASE=archalley
PGPASSWORD={password}

# Legacy Supabase configuration (can be removed after migration)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Google Gemini AI for content categorization and translation
GEMINI_API_KEY=your_gemini_api_key_here

# NextAuth.js
# For local development: "http://localhost:3000"
# For production: "https://yourdomain.com"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-at-least-32-characters-long"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your-google-client-id"
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# Google AI (Gemini)
GOOGLE_GEMINI_API_KEY="your-google-gemini-api-key"

# Email Service Configuration
# Option 1: SMTP Configuration
# For Outlook/Office365 (Recommended for Archalley Competition Emails)
SMTP_HOST="smtp.office365.com"
SMTP_PORT=587
SMTP_USER="alert@archalley.com"
SMTP_PASSWORD="your-outlook-password"
SMTP_FROM="alert@archalley.com"
EMAIL_FROM_NAME="Archalley Competition Team"

# Alternative: Gmail SMTP
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# EMAIL_FROM="your-email@gmail.com"
# EMAIL_FROM_NAME="Forum Notifications"

# Option 2: Resend Service (alternative to SMTP)
RESEND_API_KEY="your-resend-api-key"

# Cron Jobs Security (Required for automated competition reminder emails)
CRON_SECRET="your-secure-cron-secret-key"

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880        # 5MB in bytes
UPLOAD_MAX_DIMENSIONS=2048     # Max width/height in pixels
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# WebSocket
SOCKET_PORT=3001

# Azure Blob Storage
# Option 1: Use connection string (recommended)
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=your-account-name;AccountKey=your-account-key;EndpointSuffix=core.windows.net"

# Option 2: Use account name and key separately
# AZURE_STORAGE_ACCOUNT_NAME="your-account-name"
# AZURE_STORAGE_ACCOUNT_KEY="your-account-key"

# Legacy: Vercel Blob Storage (only needed for migration script)
# BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# Cart Expiry Configuration (for competition registrations)
# Set to 'true' to disable cart expiry timer (carts will never expire)
CART_EXPIRY_DISABLED=false
NEXT_PUBLIC_CART_EXPIRY_DISABLED=false

# Bank Transfer Configuration (for competition registrations)
NEXT_PUBLIC_BANK_NAME="Bank of Ceylon"
NEXT_PUBLIC_BANK_ACCOUNT_NAME="Archalley Forum"
NEXT_PUBLIC_BANK_ACCOUNT_NUMBER="1234567890"
NEXT_PUBLIC_BANK_BRANCH="Colombo Main"

# WhatsApp Contact (for bank transfer support)
NEXT_PUBLIC_WHATSAPP_NUMBER="1234567890"

# PayHere Payment Gateway
PAYHERE_MODE="sandbox" # sandbox or live
NEXT_PUBLIC_PAYHERE_MODE="sandbox" # For frontend to know which endpoint to use
PAYHERE_SANDBOX_MERCHANT_ID="your_sandbox_merchant_id"
PAYHERE_SANDBOX_MERCHANT_SECRET="your_sandbox_secret"
# For production, set PAYHERE_MODE to "live" and uncomment:
# PAYHERE_MERCHANT_ID="your_live_merchant_id"
# PAYHERE_MERCHANT_SECRET="your_live_merchant_secret"

# GA4 Measurement Protocol (server-side purchase tracking)
GA4_MEASUREMENT_ID="G-XXXXXXXXXX"
GA4_API_SECRET="your_ga4_api_secret"

# WordPress REST API
WORDPRESS_API_URL="https://archalley.com/wp-json/wp/v2"